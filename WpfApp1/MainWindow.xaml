<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <local:KeyboardHook x:Key="hook"/>

    </Window.Resources>
    <Grid>
        <TreeView x:Name="tree" VirtualizingStackPanel.IsVirtualizing="False" ItemsSource="{Binding list}" SelectedItemChanged="tree_SelectedItemChanged" HorizontalAlignment="Left" Height="415" Margin="0,2" VerticalAlignment="Center" Width="300">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding childs}">
                    <DockPanel>
                        <CheckBox Visibility="{Binding showCheckbox}" IsChecked="{Binding checkValue}"></CheckBox>
                        <TextBlock Text="{Binding Name}" MouseLeftButtonDown="tree_MouseLeftButtonDown"/>
                        <Button Visibility="{Binding showRefresh}" Tag="{Binding RuntimeId}" Margin="10,-2,0,0" Background="White" BorderThickness="0" Click="Refresh">
                            refresh
                        </Button>

                    </DockPanel>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>

        </TreeView>
        <Grid HorizontalAlignment="Left" Height="339" Margin="300,10,0,0" VerticalAlignment="Top" Width="482">            <Grid.RowDefinitions>                <!--第一行-->                <RowDefinition Height="35*"/>                <!--第二行-->                <RowDefinition Height="35*"/>                <!--第三行-->                <RowDefinition Height="35*"/>                <!--第四行-->                <RowDefinition Height="35*"/>                <RowDefinition Height="35*"/>                <RowDefinition Height="35*"/>                <RowDefinition Height="35*"/>                <RowDefinition Height="34*"/>            </Grid.RowDefinitions>            <Grid.ColumnDefinitions>                <!--第一列-->                <ColumnDefinition Width="1*"/>                <!--第二列-->                <ColumnDefinition Width="3*"/>            </Grid.ColumnDefinitions>            <Label Content="WindowCaption"></Label>            <Label Content="ClassName" Grid.Row="1" Grid.Column="0"></Label>            <Label Content="AutomationId" Grid.Row="2" Grid.Column="0"></Label>            <Label Content="RuntimeId" Grid.Row="3" Grid.Column="0"></Label>            <Label x:Name="eleName"   Grid.Row="0" Grid.Column="1"></Label>            <Label x:Name="eleClassName"  Grid.Row="1" Grid.Column="1"></Label>            <Label x:Name="rootId"   Grid.Row="2" Grid.Column="1"></Label>            <Label x:Name="runtimeId"   Grid.Row="3" Grid.Column="1"></Label>            <Button Content="检查控件是否存在" HorizontalAlignment="Left" Margin="10,6,0,0" Grid.Row="4" VerticalAlignment="Top" Width="110"/>            <Button Content="检查控件文本" HorizontalAlignment="Left" Margin="10,2,0,0" Grid.Row="5" VerticalAlignment="Top" Width="110"/>            <Button Content="点击控件" HorizontalAlignment="Left" Margin="10,1,0,0" Grid.Row="6" VerticalAlignment="Top" Width="110"/>        </Grid>
    </Grid>

</Window>
